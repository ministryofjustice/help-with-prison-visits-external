{
  "name": "help-with-prison-visits-external",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/help-with-prison-visits-external.git"
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "scripts": {
    "build": "./build",
    "css-build": "sass --no-source-map --quiet-deps --load-path=node_modules/govuk-frontend/dist --load-path=. ./app/assets/sass/application.scss ./app/public/stylesheets/application.css",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "start": "npm run css-build && node ./app/bin/www",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --fix",
    "test": "npm run lint && npm run test-unit",
    "test-coverage": "nyc npm run test-unit",
    "test-integration": "KNEX_CONFIG=testing mocha --recursive test/integration/ --timeout 15000 --exit",
    "test-load": "cd test/load && ../../node_modules/.bin/artillery run scenarios.yaml cd ../../",
    "test-unit": "jest",
    "test:ci": "jest --runInBand --coverage",
    "test-e2e": "KNEX_CONFIG=testing cypress run --config video=false",
    "test-e2e-ui": "KNEX_CONFIG=testing cypress open",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@ministryofjustice/hmpps-monitoring": "1.0.1",
    "applicationinsights": "^2.9.8",
    "axios": "^1.13.4",
    "bases": "^0.2.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "clamscan": "^2.4.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.1",
    "csrf-csrf": "^4.0.3",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "govuk-frontend": "^5.14.0",
    "helmet": "^8.1.0",
    "i18n": "^0.15.3",
    "jquery": "^4.0.0",
    "jquery-ui-dist": "^1.13.3",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "nunjucks": "^3.2.4",
    "path": "^0.12.7",
    "sanitize-html": "^2.17.0",
    "sass": "^1.97.3",
    "tedious": "^19.2.0",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^1.0.2",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "cypress": "^15.9.0",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "node-mocks-http": "^1.17.2",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.2.2"
  }
}
