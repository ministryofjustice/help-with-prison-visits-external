{
  "name": "external-web",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/apvs-external-web.git"
  },
  "engines": {
    "node": "12.x.x"
  },
  "scripts": {
    "start": "gulp",
    "generate-assets": "gulp generate-assets",
    "start-maintenance": "node app/bin/www-maintenance",
    "test": "standard && mocha --recursive test/unit/ --exit",
    "test-coverage": "nyc npm run test-unit",
    "test-unit": "mocha --recursive test/unit/ --exit",
    "test-integration": "mocha --recursive test/integration/ --timeout 15000 --exit",
    "test-e2e": "gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-smoke": "gulp --gulpfile gulpfile-e2e.js e2e-smoke",
    "test-e2e-ie8": "wdio test/wdio.conf.sauce.ie8.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-ie8-jenkins": "wdio test/wdio.conf.sauce.ie8.jenkins.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "test-e2e-chrome-jenkins": "wdio test/wdio.conf.sauce.chrome.jenkins.js",
    "test-e2e-ios": "wdio test/wdio.conf.sauce.ios.js",
    "test-e2e-android": "wdio test/wdio.conf.sauce.android.js",
    "test-e2e-smoke-jenkins": "wdio test/wdio.conf.sauce.chrome.jenkins.smoke.js",
    "test-load": "cd test/load && ../../node_modules/.bin/artillery run scenarios.yaml cd ../../",
    "migrations": "knex migrate:latest --env migrations",
    "rollback": "knex migrate:rollback --env migrations"
  },
  "standard": {
    "ignore": [
      "cache_node_modules/*",
      "jquery*.js",
      "ga.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "afterEach",
      "after",
      "it",
      "browser",
      "$"
    ]
  },
  "dependencies": {
    "applicationinsights": "^1.8.8",
    "bases": "^0.2.1",
    "basic-auth": "^2.0.1",
    "bluebird": "^3.7.2",
    "body-parser": "~1.19.0",
    "bunyan": "^1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "clamscan": "^1.3.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^2.0.0-beta.1",
    "csurf": "^1.11.0",
    "debug": ">=4.3.1",
    "express": "~4.17.1",
    "express-nunjucks": "^2.2.5",
    "express-rate-limit": "^5.2.3",
    "express-sanitized": "^0.5.1",
    "govuk_frontend_toolkit": "^9.0.0",
    "govuk_template_jinja": "^0.26.0",
    "govuk-elements-sass": "^3.1.3",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "helmet": "^4.3.1",
    "i18n": "^0.13.2",
    "knex": "^0.21.15",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.1",
    "mssql": "^6.3.1",
    "multer": "^1.4.2",
    "node-sass": "^5.0.0",
    "nunjucks": "^3.2.2",
    "on-finished": "^2.3.0",
    "path": "^0.12.7",
    "serve-favicon": "~2.5.0",
    "sqlite3": "^5.0.1",
    "underscore": "^1.12.0",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@wdio/cli": "6.10.5",
    "@wdio/local-runner": "6.10.5",
    "@wdio/mocha-framework": "6.10.4",
    "@wdio/sauce-service": "6.10.4",
    "artillery": "^1.6.1",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "gulp-nodemon": "^2.5.0",
    "gulp-webdriver": "^4.0.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "selenium-standalone": "^6.23.0",
    "sinon": "^9.2.3",
    "standard": "^16.0.3",
    "supertest": "^6.0.1",
    "webdriverio": "6.10.5"
  }
}
