
{
  "name": "help-with-prison-visits-external",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/help-with-prison-visits-external.git"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "scripts": {
    "build": "./build",
    "css-build": "sass --no-source-map --quiet-deps --load-path=node_modules/govuk-frontend/dist --load-path=. ./app/assets/sass/application.scss ./app/public/stylesheets/application.css",
    "record-build-info": "node scripts/record-build-info",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "start": "npm run css-build && node ./app/bin/www",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --fix",
    "test": "npm run lint && npm run test-unit",
    "test-coverage": "nyc npm run test-unit",
    "test-integration": "KNEX_CONFIG=testing mocha --recursive test/integration/ --timeout 15000 --exit",
    "test-load": "cd test/load && ../../node_modules/.bin/artillery run scenarios.yaml cd ../../",
    "test-unit": "jest",
    "test:ci": "jest --runInBand --coverage",
    "test-e2e": "KNEX_CONFIG=testing cypress run --config video=false",
    "test-e2e-ui": "KNEX_CONFIG=testing cypress open"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.{ts,js,jsx,mjs}"
    ],
    "testPathIgnorePatterns" : [
      "<rootDir>/test/unit/routes/mock-view-engine.js" 
    ],
    "testMatch": [
      "<rootDir>/test/unit/**/?(*.){ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.917.0",
    "applicationinsights": "^2.9.8",
    "axios": "^1.12.2",
    "bases": "^0.2.1",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "clamscan": "^2.4.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cookie-session": "^2.1.1",
    "csurf": "^1.11.0",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "govuk-frontend": "^5.13.0",
    "helmet": "^8.1.0",
    "i18n": "^0.15.2",
    "jquery": "^3.7.1",
    "jquery-ui-dist": "^1.13.3",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "nunjucks": "^3.2.4",
    "path": "^0.12.7",
    "sanitize-html": "^2.17.0",
    "sass": "^1.93.2",
    "tedious": "^19.0.0",
    "validator": "^13.15.20"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^0.0.5",
    "cypress": "^15.5.0",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.6",
    "node-mocks-http": "^1.17.2",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.4"
  },
  "overrides": {
    "csurf": {
      "cookie": "1.0.2"
    }
  }
}
